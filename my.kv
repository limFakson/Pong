WindowManager:
    MainScreen:
    SecondScreen:

<MainScreen>:
    name: "main"
    GridLayout:
        cols: 1

        GridLayout:
            cols: 2

            Label:
                text: "password"
            
            TextInput:
                id: "pass"
                multiline: False

        Button:
            text:"submit"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"

<SecondScreen>:
    name: "second"
    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"