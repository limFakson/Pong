<MyGrid>
    name: name
    email: email

    GridLayout:
        cols:1
        size: root.width -200, root.height -200
        pos: 100, 100

        GridLayout:
            cols: 2

            Label: 
                id: Lname
                text: "Name"

            TextInput:
                id: name
                mutiline: False
            
            Label:
                id: Lemail
                text: "Email"

            TextInput:
                id: email
                mutiline: False
        
        Button:
            text: "Submit"
            on_press: root.btn()